#!/usr/bin/env bash
site=""

usage () {
  echo "Usage:"
  echo "    $(basename "$0") -h             Display this help message."
  echo "    $(basename "$0") <domain>       Get TLS cert from <domain>"
}

if [ $# -lt 1 ]; then
  usage
  exit 1
fi

while getopts ":h" opt; do
  case ${opt} in
    h )
      usage
      exit 0
      ;;
   \? )
     echo "Invalid Option: -$OPTARG" 1>&2
     usage
     exit 1
     ;;
  esac
done

site=$1
echo | \
    openssl s_client -servername "$site" -connect "$site":443 2>/dev/null | \
    openssl x509 -text -noout
