[core]
  editor       = vim
  autocrlf     = false
  safecrlf     = true
  excludesfile = ~/.gitignore.local

[push]
  default = simple

[merge]
  tool          = opendiff
  conflictstyle = diff3
  prompt        = false

[color]
  ui      = true
  diff    = true

[pretty]
  colorgraph = "%C(bold red)%h%Creset %C(blue)%aN%Creset %C(yellow)%cr%Creset - %s %C(yellow)%d%Creset"

[alias]
  logdiff = log -U1 --word-diff --abbrev-commit
  l       = log --abbrev-commit
  stat    = log --format=colorgraph --graph --abbrev-commit --stat

[filter "media"]
  clean   = git-media-clean %f
  smudge  = git-media-smudge %f

[diff]
  tool    = opendiff
  renames = true

[interactive]
  singlekey = true

[commit]
  template = ~/.dotfiles/gitmessage
  verbose = true

[user]
  name = Forrest Fleming
  email = ffleming@gmail.com

[include]
  path = .gitconfig.work

[credential]
	helper = osxkeychain
