[core]
  editor       = vim
  autocrlf     = false
  safecrlf     = true
  excludesfile = ~/.gitignore.local

[push]
  default = simple

[merge]
  tool          = opendiff
  conflictstyle = diff3
  prompt        = false

[color]
  ui      = true
  diff    = true

[pretty]
  colorgraph = "%C(bold red)%h%Creset %C(blue)%aN%Creset %C(yellow)%cr%Creset - %s %C(yellow)%d%Creset"

[alias]
  type    = cat-file -t
  dump    = cat-file -p
  logdiff = log --format=colorgraph --graph -U1 --word-diff --color-words
  l       = log --format=colorgraph --graph --abbrev-commit
  stat    = log --format=colorgraph --graph --abbrev-commit --stat
  today   = log --since=midnight --author=\"$(git config user.name)\" --oneline
  release = !sh -c 'git fetch origin && git checkout -b release/$(date +%Y.%m.%d.%H%m)'

[filter "media"]
  clean   = git-media-clean %f
  smudge  = git-media-smudge %f

[diff]
  tool    = opendiff
  renames = true

[interactive]
  singlekey = true

[commit]
  template = ~/.dotfiles/gitmessage

[user]
  name = Forrest Fleming
  email = ffleming@gmail.com

[include]
  path = .gitconfig.work

[credential]
	helper = osxkeychain
