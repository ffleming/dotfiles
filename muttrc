set from = "ffleming@gmail.com"
set realname = "Forrest Fleming"

set imap_user = "ffleming@gmail.com"
source '~/.mutt/mutt.secret'

# Accounts
set folder = "imaps://imap.gmail.com:993"
set spoolfile = "+INBOX"
set postponed = "+[Gmail]/Drafts"
set trash = "+[Gmail]/Trash"
set smtp_url = "smtp://ffleming@smtp.gmail.com:587/"
set smtp_authenticators = 'gssapi:login'
set mailcap_path     = ~/.mutt/mailcap       # entries for filetypes
mailboxes +INBOX +USMLERx +UCI +Notes

# Local caching
set header_cache =~/.mutt/cache/headers
set message_cachedir =~/.mutt/cache/bodies
set certificate_file =~/.mutt/certificates

unset imap_passive
unset record
set imap_check_subscribed
set mail_check = 120
set text_flowed
set move = no  #Stop asking to "move read messages to mbox"!
set imap_keepalive = 900

auto_view text/html

# Gmail-style keyboard shortcuts
macro index ga "<change-folder>=[Gmail]/All Mail<enter>" "Go to all mail"
macro index gd "<change-folder>=[Gmail]/Drafts<enter>" "Go to drafts"
macro index gi "<change-folder>=INBOX<enter>" "Go to inbox"
macro index gs "<change-folder>=[Gmail]/Starred<enter>" "Go to starred messages"
macro index gt "<change-folder>=[Gmail]/Trash<enter>" "Go to trash"
macro index,pager d "<save-message>=[Gmail]/Trash<enter><enter>" "Trash"
macro index,pager a "<save-message>=[Gmail]/All Mail<enter><enter>" "Archive"

macro index A "<limit>all\n" "show all messages (undo limit)"
bind index,pager K sidebar-prev
bind index,pager J sidebar-next
bind index,pager O sidebar-open
bind index,pager o        imap-fetch-mail
bind index R        group-reply
bind index <tab>    sync-mailbox
bind index <space>  collapse-thread
bind editor <space> noop

# vim-clone keybinds
bind index gg       first-entry
bind index G        last-entry
bind index,pager N search-opposite

# Ctrl-R to mark all as read
macro index \Cr "T~U<enter><tag-prefix><clear-flag>N<untag-pattern>.<enter>" "mark all messages as read"

# Saner copy/move dialogs
macro index C "<copy-message>?<toggle-mailboxes>" "copy a message to a mailbox"
macro index M "<save-message>?<toggle-mailboxes>" "move a message to a mailbox"

# Index View Options ---------------------------------
set date_format = "%m/%d"
set index_format = "[%Z]  %D  %-20.20F  %s"
set sort = threads                         # like gmail
set sort_aux = reverse-last-date-received  # like gmail
set uncollapse_jump                        # don't collapse on an unread message
set sort_re                                # thread based on regex
set reply_regexp = "^(([Rr][Ee]?(\[[0-9]+\])?: *)?(\[[^]]+\] *)?)*"

# Sidebar Patch --------------------------------------
set sidebar_delim   = '  │'
set sidebar_visible = yes
set sidebar_width   = 24
color sidebar_new color221 color233

# Status Bar -----------------------------------------
set status_chars  = " *%A"
set status_format = "───[ Folder: %f ]───[%r%m messages%?n? (%n new)?%?d? (%d to delete)?%?t? (%t tagged)? ]───%>─%?p?( %p postponed )?───"

# Contacts
set query_command = "contacts -Sf '%eTOKEN%n' '%s' | sed -e 's/TOKEN/\t/g'"
bind editor <Tab> complete-query
bind editor ^T    complete

# Load theme
source "~/.mutt/mutt-colors-solarized"
